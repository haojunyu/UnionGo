.container {
    padding-top: 30rpx;
}
.section {
    margin: 10rpx 20rpx;
}

.input {
    background-color: #F2F2F2;
    font-size: 0.8em;
    padding: 10rpx 10rpx;
    border-color: lightgray;
    border-style: solid;
    border-width: 1rpx;
    border-radius: 10rpx;
    color: black;
}

picker .input {
    height: 50rpx; 
    padding: 10rpx 10rpx;
    font-size: 0.8em;  
}

.title {
    font-size: 0.8em;
    margin-bottom: 10rpx;
    color: #009933;
}

button {
    height: 80rpx;
    font-size: 0.8em;
    margin: 10rpx 20rpx;
}

.btn-section {
    flex-direction:row;
    margin-top: 50rpx;
}

.tag {
    background: mediumpurple;
    color: #fff;
    text-align:center;
    padding:0px;
    font-size: 0.7em;
    vertical-align:middle ;
    line-height:20px;
    margin:0px; 
    Height:20px;
    Width:60px;
    display: inline-block;
    margin-right: 30rpx;
}



